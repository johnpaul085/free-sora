# Docker部署环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# ========== 后端配置 ==========
# 服务器配置
PORT=3001
NODE_ENV=production

# 数据库配置
DB_TYPE=sqlite
# SQLite配置
SQLITE_PATH=/app/data/database.sqlite

# 如果使用MySQL，取消注释以下配置并设置DB_TYPE=mysql
# MYSQL_HOST=mysql
# MYSQL_PORT=3306
# MYSQL_USER=ai_user
# MYSQL_PASSWORD=ai_password
# MYSQL_DATABASE=ai_platform
# MYSQL_ROOT_PASSWORD=rootpassword

# JWT配置（生产环境请修改）
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string
JWT_EXPIRES_IN=7d

# 文件存储配置
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# CORS配置（根据实际前端地址修改）
CORS_ORIGIN=http://localhost:3000

# ========== 前端配置 ==========
# API基础URL（Docker内部使用服务名）
NEXT_PUBLIC_API_BASE_URL=http://backend:3001/api/v1
# 如果从外部访问，使用：
# NEXT_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1

# 应用配置
NEXT_PUBLIC_APP_NAME=AI内容生成平台
NEXT_PUBLIC_APP_VERSION=1.0.0

# 文件上传配置
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
NEXT_PUBLIC_ALLOWED_VIDEO_TYPES=video/mp4,video/webm

# ========== MySQL配置（如果使用MySQL） ==========
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=ai_platform
MYSQL_USER=ai_user
MYSQL_PASSWORD=ai_password
