{
  "name": "ai-backend",
  "version": "1.0.0",
  "description": "AI内容生成平台后端服务",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:init": "tsx src/db/init.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:setAdmin": "tsx src/db/setAdmin.ts",
    "db:initSora": "tsx src/db/initSoraCharacters.ts",
    "db:update": "tsx -e \"import('./src/db/migrate.js').then(m => m.runAllMigrations())\""
  },
  "keywords": ["ai", "backend", "express"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "mysql2": "^3.6.5",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
